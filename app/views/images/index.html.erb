<p id="notice"><%= notice %></p>

<h1>Listing Images</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image_tag(image.file.url) %> </td>
        <td><%= image.name %></td>
        <td><%= image.description %></td>
        <td><%= link_to image_tag('show.png', height: '20', width: '20'), image %></td>
        <td><%= link_to image_tag('edit.png', height: '20', width: '20'), edit_image_path(image) %></td>
        <td><%= link_to image_tag('delete.png', height: '20', width: '20'), image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

